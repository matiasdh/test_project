<!DOCTYPE html>
<html>
<head>
  <title>Testproject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="container-fluid">

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to "TestProject", root_path, class: "navbar-brand" %>
      </div>
      <ul class="nav navbar-nav navbar-right">

        <% if @current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= @current_user.first_name+' '+@current_user.last_name+' ' %><span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'All tweets', landing_path %></li>
              <li><%= link_to 'My tweets', mytweets_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign in", login_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <% flash.each do |name, msg| %>
    <div class="alert alert-danger" role="alert">
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>

  <%= yield %>

</body>
</html>
